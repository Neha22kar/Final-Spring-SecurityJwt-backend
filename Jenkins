pipeline {
    agent any

    // Define tools section to install Maven
    tools {
        // Install Maven with the specified name and version
        maven 'Maven'
    }

    stages {
        stage('Build') {
            steps {
                // Use the installed Maven for your build
                script {
                    // Example Maven build command
                    sh 'mvn clean install'
                }
            }
        }
        // Add more stages as needed
    }
}
